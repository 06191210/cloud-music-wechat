/* pages/index/index.wxss */
.banners{
	width: 100%;
	height: 300rpx;
}

.banners image{
	width: 100%;
	height: 100%;
}
.navContainer{
	display: flex;
}
.navItem{
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 20%;
}
.navItem .iconfont{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	text-align: center;
	line-height: 100rpx;
	background-color: rgb(240,19,19);
	font-size: 50rpx;
	color: #fff;
	margin: 20rpx 0 ;
}
.navItem text{
	font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer{
	padding: 10px;
}


/* 推荐区 */
.recommendScroll{
	display: flex;
	height: 300rpx;
}
.scrollItem{
	width: 200rpx;
	margin-right: 10rpx;
}
.scrollItem image{
	width: 200rpx;
	height: 200rpx;
	border-radius: 10rpx;
}
.scrollItem text{
	font-size: 26rpx;
	/* 多行文本溢出隐藏，省略号代替 */
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}

/* 排行榜 */
.topList{
	padding: 20rpx;
}
.topListSwiper{
	height: 450rpx;
}
.swiperItem{
	width: 96%;
	background: #fbfbfb;
}
.swiperItem .title{
	font-size: 30rpx;
	line-height: 80rpx;
}
.musicItem{
	display: flex;
	margin-bottom: 20rpx;
}
.musicItem image{
	width:100rpx;
	height: 100rpx;
}
.musicItem .count{
	width: 100rpx;
	height: 100rpx;
	text-align: center;
	line-height: 100rpx;
}
.musicItem .musicName{
	height: 100rpx;
	line-height: 100rpx;
	max-width: 400rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}